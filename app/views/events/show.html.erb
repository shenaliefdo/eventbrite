<article>
    <header>
        <h2><%=@event.name%></h2>
    </header>
        <p><%=@event.description%></p>
    <table>
        <tr>
        <th>When:</th>
        <td><%=@event.start_at%></td>
        </tr>
        <th>Where:</th>
        <td><%=@event.location%></td>
        </tr>
        <th>Price:</th>
        <td><%=format_price(@event)%></td>
        </tr>
    </table>
</article>